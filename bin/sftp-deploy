#!/usr/bin/env php
<?php

if (is_file(__DIR__.'/../autoload.php') === true) {
    include_once __DIR__.'/../autoload.php';
} elseif (is_file(__DIR__.'/../vendor/autoload.php') === true) {
    include_once __DIR__.'/../vendor/autoload.php';
}

$app   = new Mentosmenno2\SFTPDeploy\App();
$exitCode = $app->run();
exit($exitCode);